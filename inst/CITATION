  journal      = "The Plant Phenome J.",
  year         = "2020",
  pages        = "1--6",
  url          = "https://doi.org/10.1002/ppj2.20005"
)

bibentry(bibtype="Manual",
         title = "{FIELDimageR}: An {R} package to analyze orthomosaic images from agricultural field trials",
         author = c(person(c("Filipe", "I."), "Matias"),person(c("Maria", "V."), "Caraza-Harter"),person(c("Jeffrey", "B."), "Endelman")),
         year         = "2020",
         url          = "https://doi.org/10.1002/ppj2.20005",
         note = note
)

